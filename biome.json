{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 120,
		"ignore": [
			"./.vscode/",
			"./node_modules/",
			"./coverage/",
			"./dist/",
			"./.github/",
			"./.qodo/",
			"./.idea/"
		]
	},
	"linter": {
		"rules": {
			"recommended": true
		},
		"ignore": [
			"./.vscode/",
			"./node_modules/",
			"./coverage/",
			"./dist/",
			"./.github/",
			"./tests/",
			"./.qodo/",
			"./.idea/"
		 ]
	},
	"json": {
		"formatter": {
			"enabled": false
		}
	}
}

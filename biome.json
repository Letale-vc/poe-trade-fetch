{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 120,
		"ignore": [
			"node_modules",
			"dist"
		]
	},
	"linter": {
		"rules": {
			"recommended": true
		},
		"ignore": [
			"node_modules",
			"dist",
			"tests"
		 ]
	},
	"json": {
		"formatter": {
			"enabled": false
		}
	}
}

{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "ESNext",
        "module": "esnext",
        "moduleResolution": "Node10",
        "removeComments": true,
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "erasableSyntaxOnly": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist",
        "coverage",
        "tests",
        "index.d.ts",
        "example",
        "jest.config.js",
        ".eslintrc.cjs",
        "fixTypeModule.js"
    ]
}

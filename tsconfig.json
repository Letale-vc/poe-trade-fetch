{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist",
    "coverage",
    "tests",
    "index.d.ts",
    "example",
    "jest.config.js",
    "eslint.config.js"
  ]
}
